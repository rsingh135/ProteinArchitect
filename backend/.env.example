# Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ============================================
# REQUIRED API KEYS
# ============================================

# Gemini API Key (Required for Protein Search)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (Optional - for LLM refinement features)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# AWS CONFIGURATION (Required for SageMaker deployment)
# ============================================

# AWS Access Key ID
# Get from: https://console.aws.amazon.com/iam/
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here

# AWS Secret Access Key
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# AWS Region
AWS_REGION=us-east-1

# ============================================
# SAGEMAKER CONFIGURATION
# ============================================

# SageMaker PPI Endpoint Name
# Set this after deploying your model to SageMaker
SAGEMAKER_PPI_ENDPOINT=protein-ppi-endpoint

# Use Local PPI Service (for development)
# Set to "true" to use local service instead of SageMaker
USE_LOCAL_PPI=true

# ============================================
# OPTIONAL CONFIGURATION
# ============================================

# Backend Server Port
PORT=8000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Log Level
LOG_LEVEL=INFO
